{% extends 'base.html.twig' %}

{% form_theme formulario 'form/contactoForm.html.twig' %}

{% block body %}

    <!-- Contact section -->
    <div class="contact-form spad pb-0 container" style="margin-top:-50px">
		<div class="section-title text-center">
			<h3>Contactenos</h3>
			<p>Complete el formulario y luego presione "Enviar."</p>
		</div>
        {{ form_start(formulario) }}
            {{ form_errors(formulario) }}
			<div class="row">
				<div class="col-lg-4">
                    {{ form_widget(formulario.nombreApellido, { 'attr': {'placeholder': 'Nombre y apellido'} }) }}
				</div>
				<div class="col-lg-4">
                    {{ form_widget(formulario.email, { 'attr': {'placeholder': 'Email'} }) }}
				</div>
				<div class="col-lg-4">
                    {{ form_widget(formulario.asunto, { 'attr': {'placeholder': 'Asunto'} }) }}
				</div>
				<div class="col-lg-12">
                    {{ form_widget(formulario.mensaje, { 'attr': {'placeholder': 'Mensaje'} }) }}
					<div class="text-center">
                        {{ form_widget(formulario.enviar) }}
					</div>
				</div>
			</div>
        {{ form_end(formulario) }}
	</div>
    <br><br><br><br>
	<section class="contact-page spad pt-0">
		<div class="container">
			<div class="map-section">
				<div class="contact-info-warp">
					<div class="contact-info">
						<h4>Dirección</h4>
						<p>Fragata Sarmiento 46, Buenos Aires</p>
					</div>
					<div class="contact-info">
						<h4>Teléfono</h4>
						<p>(005411) 2054-1499</p>
					</div>
					<div class="contact-info">
						<h4>Celulares</h4>
						<p>6668-5935 | 4094-5536</p>
					</div>
					<div class="contact-info">
						<h4>Email</h4>
						<p><a href="mailto:info@ianca.com.ar" style="color:#fff;">info@ianca.com.ar</a></p>
					</div>
				</div>
				<!-- Google map -->
				<div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2596.0034464593664!2d-58.44996135711596!3d-34.62221637153995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcca3b9f183127%3A0x2eed977c849ef12c!2sFragata%20Pres.%20Sarmiento%2046%2C%20C1406BWB%20CABA!5e0!3m2!1ses!2sar!4v1580941462678!5m2!1ses!2sar" width="100%" height="500" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
                </div>
			</div>
            <br>
			<div class="contact-form spad pb-0">
				<div class="section-title text-center">
					<h3>Como llegar</h3>
					<p>En la Calle Fragata Presidente Sarmiento 46</p>
					<p>Entre Avenida Rivadavia (al 5900) y la calle Yerbal</p>
					<p>A 100 Metros de la Estación "Puán" de Línea de la "A" de Subterráneo</p>
					<p>Estación "Caballito" del Ferrocarril Sarmiento</p>
					<p>Líneas de Colectivos: 1; 2; 5; 8; 25; 44; 49; 53; 55; 85; 86; 88; 92; 96; 103; 132; 141; 153; 155; 163; 168; 172; 180</p>
				</div>
			</div>
		</div>
	</section>
	<!-- Contact section end-->
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        setTimeout(function(){
            if ($('#divSuccess').length > 0) {
                $('#divSuccess').toggle("slow");
            }
        }, 5000)
    </script>
{% endblock %}
