{% extends 'base.html.twig' %}

{% form_theme formulario 'form/contactoForm.html.twig' %}

{% block body %}
    <!-- Editar publicación section -->
	<div class="container services">
		<div class="section-title text-center">
			<h3>Edición de publicación</h3>
		</div>
		{{ form_start(formulario) }}
			{{ form_errors(formulario) }}
			<div class="row">
				<div class="col-lg-2">
					Obra:
				</div>
				<div class="col-lg-10">
					{{ form_widget(formulario.obra) }}
				</div>
			</div>
			<div class="row">
				<div class="col-lg-2">
					Autores:
				</div>
				<div class="col-lg-10">
					{{ form_widget(formulario.autores) }}
				</div>
			</div>
			<div class="row">
				<div class="col-lg-2">
					Descripción corta:
				</div>
				<div class="col-lg-10">
					{{ form_widget(formulario.descripcion_corta) }}
				</div>
			</div>
			<div class="row">
				<div class="col-lg-2">
					Descripción larga:
				</div>
				<div class="col-lg-10">
					{{ form_widget(formulario.descripcion_larga) }}
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-lg-2">
					Link:
				</div>
				<div class="col-lg-10">
					{{ form_widget(formulario.link) }}
				</div>
			</div>
			<div class="row">
				<div class="col-lg-2">
					Activo:
				</div>
				<div class="col-lg-10">
					{{ form_widget(formulario.activo) }}
				</div>
			</div>
			<br>
			<div class="row">
				<div class="col-lg-2">
					Imágen:
				</div>
				{% if imagen_nombre != '' %}
					<div class="col-lg-6">
						{{ form_widget(formulario.imagen) }}
					</div>
					<div class="col-lg-3">
						<img id="thumbPublicacion" scr="" alt="">
						<img id="imagenPublicacion" src="{{ asset('img/uploads/publicaciones_imagenes/' ~ imagen_nombre) }}" alt="">
					</div>
					<div class="col-lg-1"></div>
				{% else %}
					<div class="col-lg-10">
						{{ form_widget(formulario.imagen) }}
					</div>
				{% endif %}
			</div>
			<br>
			<div class="row">
				<div class="col-lg-12">
					<div class="text-center">
						<a href="{{ path('listado-publicaciones') }}"><div class="site-btn" style="margin-right:20px">Volver</div></a>
						{{ form_widget(formulario.guardar) }}
					</div>
				</div>
			</div>
		{{ form_end(formulario) }}
	</div>
	<br><br><br><br>
	<!-- Editar publicación section end -->
{% endblock %}

{% block javascripts %}
	<script type="text/javascript" src="{{ asset('js/uploadImg.js') }}">
{% endblock %}
