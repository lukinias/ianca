{% extends 'base.html.twig' %}

{% form_theme formulario 'form/loginForm.html.twig' %}

{% block body %}

    <!-- Login section -->
    <div class="login-form spad pb-0" style="margin-top:-50px">
        <div class="container">
    		<div class="section-title text-center">
    			<h3>Login</h3>
    		</div>
            <form action="{{ path('login') }}" method="post" class="comment-form --contact">
    			<div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            {% if error %}
                                <div style="color:red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                        </div>
                    </div>
                    <br><br>
    				<div class="col-lg-4">
                        <input type="text" id="username" name="_username" required="required" placeholder="Usuario" value="{{ last_username }}">
    				</div>
    				<div class="col-lg-4">
                        <input type="password" id="password" name="_password" required="required" placeholder="ContraseÃ±a">
    				</div>
    				<div class="col-lg-4">
    					<div class="text-center">
                            <button type="submit" class="site-btn">Ingresar</button>
    					</div>
    				</div>
    			</div>
            </form>
        </div>
	</div>
    <br><br><br><br>
	<!-- Login section end-->
{% endblock %}
